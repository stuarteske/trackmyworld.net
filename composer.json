{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
		"guzzlehttp/guzzle": "~4.0",
        "zofe/rapyd": "1.3.*",
		"anlutro/l4-settings": "dev-master",
        "zizaco/entrust": "dev-master",
        "intervention/image": "2.*",
        "barryvdh/laravel-debugbar": "1.*",
        "anahkiasen/former": "dev-master",
        "vespakoen/menu": "dev-master",
        "facebook/php-sdk" : "*",
		"hannesvdvreken/hipchat": "master-dev",
		"thomaswelton/laravel-gravatar": "dev-master"
	},
    "require-dev": {
        "way/generators": "2.*"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "php artisan config:publish thomaswelton/laravel-gravatar"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "php artisan asset:publish zofe/rapyd",
            "php artisan config:publish thomaswelton/laravel-gravatar"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
